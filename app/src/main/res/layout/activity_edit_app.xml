<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/activity_edit_app_enable_switch"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/edit_app_application_enable"
        android:background="@color/colorAccent"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:paddingStart="77dp"
        android:paddingEnd="18dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:thumbTint="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <ImageView
                    android:id="@+id/activity_edit_app_app_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/activity_edit_app_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/activity_edit_app_app_icon"
                    app:layout_constraintTop_toTopOf="@+id/activity_edit_app_app_icon" />

                <TextView
                    android:id="@+id/activity_edit_app_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/activity_edit_app_app_name"
                    app:layout_constraintStart_toEndOf="@id/activity_edit_app_app_name"/>

                <TextView
                    android:id="@+id/activity_edit_app_app_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/activity_edit_app_app_name"
                    app:layout_constraintBottom_toBottomOf="@id/activity_edit_app_app_icon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>