<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/module_settings_fragment_clickable_item_clickable"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/module_settings_fragment_button_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@id/module_settings_fragment_button_title"
        app:layout_constraintTop_toTopOf="@id/module_settings_fragment_button_title"
        app:layout_constraintBottom_toBottomOf="@id/module_settings_fragment_button_data"/>

    <TextView
        android:id="@+id/module_settings_fragment_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/module_settings_fragment_button_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/module_settings_fragment_button_title"
        app:layout_constraintTop_toBottomOf="@id/module_settings_fragment_button_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
